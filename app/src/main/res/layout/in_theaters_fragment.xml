<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyMaterialTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tab_margin"
    android:background="@color/actionColorPrimary"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:background="@color/titleBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content_name"
            android:layout_width="@dimen/title_text_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="textMultiLine"
            android:paddingRight="@dimen/text_margin"
            android:singleLine="false"
            android:textAppearance="@style/TitleAppearance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_size"
            android:layout_marginRight="@dimen/text_margin"
            android:background="@color/titleBackground"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textAppearance="@style/TextTitleAppearance" />

            <ImageView
                android:layout_width="@dimen/star_size"
                android:layout_height="@dimen/star_size"
                android:gravity="center_vertical"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/content_audience_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextTitleAppearance" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="@dimen/poster_size"
            android:layout_height="@dimen/poster_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="@style/BodyTitleAppearance"/>

            <TextView
                android:id="@+id/content_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="@style/BodyTitleAppearance"/>

            <TextView
                android:id="@+id/content_imdb_img_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="@style/BodyTitleAppearance"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/content_synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/BodyTitleAppearance" />
</LinearLayout>
